@model GigHub.ViewModels.GigFormViewModel
@{
    ViewBag.Title = "Create";
}
<h1>Add a new gig</h1>
@using (Html.BeginForm("Create", "Gigs"))
{
    <p class="alert alert-info">All fields are <strong>required</strong></p>
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(_ => _.Venue)
        @Html.TextBoxFor(_ => _.Venue, new { @class = "form-control", autofocus="autofocus" })
        @Html.ValidationMessageFor(_=>_.Venue)
    </div>
    <div class="form-group">
        @Html.LabelFor(_ => _.Date)
        @Html.TextBoxFor(_ => _.Date, new { @class = "form-control", placeholder="eg 1 Jan 2015" })
        @Html.ValidationMessageFor(_=>_.Date)
    </div>
    <div class="form-group">
        @Html.LabelFor(_ => _.Time)
        @Html.TextBoxFor(_ => _.Time, new { @class = "form-control", placeholder = "eg 20:00" })
        @Html.ValidationMessageFor(_=>_.Time)
    </div>
    <div class="form-group">
        @Html.LabelFor(_ => _.Genre)
        @Html.DropDownListFor(_ => _.Genre, new SelectList(Model.Genres, "Id", "Name"), "Choose genre", new { @class = "form-control" })
        @Html.ValidationMessageFor(_=>_.Genre)
    </div>
    <button type="submit" value="Save" class="btn btn-primary">Save</button>
}
@section  scripts{
    @Scripts.Render("~/bundles/jqueryval")
    }

